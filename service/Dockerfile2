FROM python:3.9-buster


# Install dependencies:
COPY requirements.txt .
COPY runserver.py .
COPY src .
COPY environment.sh .
RUN apt -y install build-essential libpq-dev python3-dev
RUN bash enviroment.sh 
RUN pip install -r requirements.txt

EXPOSE 9999

# Run the application:
CMD ["python", "runserver.py"]